<Window x:Class="Serenity.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Serenity"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600" DataContext="{Binding Source={StaticResource Locator},Path=Main}"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Grid Width="540" Height="340" Background="White">
        <Grid.Effect>
            <DropShadowEffect BlurRadius="10" Color="DarkCyan" ></DropShadowEffect>
        </Grid.Effect>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" HorizontalAlignment="Right" Height="30" Width="40" Content="test" ></Button>

        <Button Grid.Row="2" HorizontalAlignment="Center" Height="30" Width="40" Content="openDialog" ></Button>

    </Grid>
</Window>
